<body>
    <div class="container">
        <header>
            <h1>Team Rotation Schedule</h1>
            <div class="creator">Created by üê¨franciumüê¨</div>
        </header>
        
        <div class="current-team">
            <h2>Current Team on Duty</h2>
            <div class="team-display">
                <span id="current-team-icon">üîÑ</span>
                <span id="current-team-name">Loading...</span>
            </div>
            <div class="time-remaining" id="time-remaining">Calculating...</div>
        </div>
        
        <div class="calendar-container" id="calendar-container">
            <!-- Calendars will be generated here -->
        </div>
        
        <div class="footer">
            Schedule runs from 5 PM UTC daily ‚Ä¢ Teams rotate every 24 hours
        </div>
    </div>

    <script>
        // Team configuration
        const teams = [
            { name: 'Wava', icon: 'üåä', colorClass: 'team-wava' },
            { name: 'Echo', icon: 'üêö', colorClass: 'team-echo' },
            { name: 'Zippy', icon: 'üèéÔ∏è', colorClass: 'team-zippy' },
            { name: 'Bloop', icon: 'ü´ß', colorClass: 'team-bloop' },
            { name: 'Blu', icon: 'üíô', colorClass: 'team-blu' }
        ];
        
        // Get the team for a specific date (5 PM UTC start)
        function getTeamForDate(date) {
            // December 1, 2025 is the reference date (team 0 = Wava)
            const referenceDate = new Date('2025-12-01T17:00:00Z');
            const targetDate = new Date(date);
            
            // Set to 5 PM UTC for comparison
            targetDate.setUTCHours(17, 0, 0, 0);
            
            // Calculate days difference
            const diffTime = targetDate.getTime() - referenceDate.getTime();
            const diffDays = Math.floor(diffTime / (1000 * 60 * 60 * 24));
            
            // Handle negative dates (before reference)
            const teamIndex = ((diffDays % teams.length) + teams.length) % teams.length;
            return teams[teamIndex];
        }
        
        // Get current team and time remaining
        function getCurrentTeamInfo() {
            const now = new Date();
            const currentUTC = new Date(now.toISOString());
            
            // Find today's 5 PM UTC
            const today5PM = new Date(currentUTC);
            today5PM.setUTCHours(17, 0, 0, 0);
            
            // If current time is before 5 PM UTC today, the current team started yesterday at 5 PM
            let teamStart;
            if (currentUTC < today5PM) {
                teamStart = new Date(today5PM);
                teamStart.setUTCDate(teamStart.getUTCDate() - 1);
            } else {
                teamStart = today5PM;
            }
            
            const teamEnd = new Date(teamStart);
            teamEnd.setUTCDate(teamEnd.getUTCDate() + 1);
            
            const timeRemaining = teamEnd.getTime() - currentUTC.getTime();
            
            const team = getTeamForDate(teamStart);
            
            return {
                team: team,
                timeRemaining: timeRemaining,
                endTime: teamEnd
            };
        }
        
        // Format time remaining
        function formatTimeRemaining(ms) {
            if (ms <= 0) return 'Rotation complete!';
            
            const hours = Math.floor(ms / (1000 * 60 * 60));
            const minutes = Math.floor((ms % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((ms % (1000 * 60)) / 1000);
            
            return `${hours}h ${minutes}m ${seconds}s remaining`;
        }
        
        // Update current team display
        function updateCurrentTeamDisplay() {
            const info = getCurrentTeamInfo();
            document.getElementById('current-team-icon').textContent = info.team.icon;
            document.getElementById('current-team-name').textContent = info.team.name;
            document.getElementById('time-remaining').textContent = formatTimeRemaining(info.timeRemaining);
        }
        
        // Generate calendar for a specific month and year
        function generateCalendar(month, year) {
            const firstDay = new Date(year, month, 1);
            const lastDay = new Date(year, month + 1, 0);
            const daysInMonth = lastDay.getDate();
            const startingDayOfWeek = firstDay.getUTCDay(); // 0 = Sunday
            
            let html = `<div class="month-calendar">
                <div class="month-header">${getMonthName(month)} ${year}</div>
                <div class="day-grid">`;
            
            // Day headers
            const dayNames = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
            dayNames.forEach(day => {
                html += `<div class="day-header">${day}</div>`;
            });
            
            // Empty cells for days before the first day of the month
            for (let i = 0; i < startingDayOfWeek; i++) {
                html += '<div class="calendar-day empty-day"></div>';
            }
            
            // Days of the month
            const today = new Date();
            const currentYear = today.getUTCFullYear();
            const currentMonth = today.getUTCMonth();
            const currentDay = today.getUTCDate();
            
            for (let day = 1; day <= daysInMonth; day++) {
                const date = new Date(year, month, day);
                const team = getTeamForDate(date);
                const isCurrentDay = (year === currentYear && month === currentMonth && day === currentDay);
                
                html += `<div class="calendar-day ${isCurrentDay ? 'current' : ''}">
                    <div class="calendar-day-number">${day}</div>
                    <div class="${team.colorClass} calendar-day-team">${team.name}</div>
                </div>`;
            }
            
            html += '</div></div>';
            return html;
        }
        
        function getMonthName(monthIndex) {
            const months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
            return months[monthIndex];
        }
        
        // Generate calendars for the specified period
        function generateAllCalendars() {
            const container = document.getElementById('calendar-container');
            let html = '';
            
            // December 2025
            html += generateCalendar(11, 2025);
            
            // January to June 2026
            for (let month = 0; month <= 5; month++) {
                html += generateCalendar(month, 2026);
            }
            
            container.innerHTML = html;
        }
        
        // Initialize the page
        function init() {
            updateCurrentTeamDisplay();
            generateAllCalendars();
            
            // Update time remaining every second
            setInterval(updateCurrentTeamDisplay, 1000);
        }
        
        // Start when page loads
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>

