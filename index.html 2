<body>
    <div class="container">
        <header>
            <h1>SOUNDNESS TEAM SCHEDULE</h1>
        </header>

        <div class="current-info">
            <div class="current-team" id="currentTeamDisplay">
                <span id="currentTeamEmoji">üåä</span>
                <span id="currentTeamName">Wava</span>
            </div>
            <div class="time-remaining" id="timeRemaining">Time remaining: 23 hours 45 minutes</div>
            <div class="time-display" id="currentTime"></div>
        </div>

        <div class="months-container" id="monthsContainer">
            <!-- Months will be generated here -->
        </div>

        <div class="creator">
            created by <span class="emoji">üê¨</span>francium<span class="emoji">üê¨</span>
        </div>
    </div>

    <script>
        // Team configuration
        const teams = [
            { name: 'Wava', emoji: 'üåä', colorClass: 'wava' },
            { name: 'Echo', emoji: 'üêö', colorClass: 'echo' },
            { name: 'Zippy', emoji: 'üèéÔ∏è', colorClass: 'zippy' },
            { name: 'Bloop', emoji: 'ü´ß', colorClass: 'bloop' },
            { name: 'Blu', emoji: 'üíô', colorClass: 'blu' }
        ];

        // Get current time in UTC
        function getCurrentUTC() {
            const now = new Date();
            return new Date(Date.UTC(
                now.getUTCFullYear(),
                now.getUTCMonth(),
                now.getUTCDate(),
                now.getUTCHours(),
                now.getUTCMinutes(),
                now.getUTCSeconds()
            ));
        }

        // Get the current team based on UTC time
        function getCurrentTeamInfo() {
            const now = getCurrentUTC();
            
            // December 1, 2025 5 PM UTC is the starting point
            const startDate = new Date(Date.UTC(2025, 11, 1, 17, 0, 0)); // Month is 0-indexed
            
            // Calculate total hours since start
            const totalHours = Math.floor((now - startDate) / (1000 * 60 * 60));
            
            // Each team gets 24 hours, so team index cycles every 5 teams
            const teamIndex = Math.floor(totalHours / 24) % teams.length;
            
            // Calculate time remaining in current shift
            const hoursInCurrentShift = totalHours % 24;
            const hoursRemaining = 23 - hoursInCurrentShift;
            const minutesRemaining = 59 - now.getUTCMinutes();
            const secondsRemaining = 59 - now.getUTCSeconds();
            
            // Handle negative minutes/seconds
            let totalMinutesRemaining = hoursRemaining * 60 + minutesRemaining;
            if (secondsRemaining < 0) {
                totalMinutesRemaining--;
            }
            
            if (totalMinutesRemaining < 0) {
                totalMinutesRemaining = 0;
            }
            
            const finalHours = Math.floor(totalMinutesRemaining / 60);
            const finalMinutes = totalMinutesRemaining % 60;
            
            return {
                team: teams[teamIndex],
                hoursRemaining: finalHours,
                minutesRemaining: finalMinutes,
                currentDateTime: now
            };
        }

        // Generate schedule for a specific month
        function generateMonthSchedule(year, month) {
            const startDate = new Date(Date.UTC(year, month, 1, 17, 0, 0));
            const endDate = new Date(Date.UTC(year, month + 1, 0, 17, 0, 0));
            
            const schedule = [];
            let currentDate = new Date(startDate);
            
            while (currentDate <= endDate) {
                const day = currentDate.getUTCDate();
                const nextDate = new Date(currentDate);
                nextDate.setUTCDate(nextDate.getUTCDate() + 1);
                
                const dayOfMonth = currentDate.getUTCDate();
                const nextDayOfMonth = nextDate.getUTCDate();
                
                // Calculate team index for this day
                const totalHoursSinceStart = Math.floor((currentDate - new Date(Date.UTC(2025, 11, 1, 17, 0, 0))) / (1000 * 60 * 60));
                const teamIndex = Math.floor(totalHoursSinceStart / 24) % teams.length;
                const team = teams[teamIndex];
                
                // Format dates
                const monthNames = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
                const currentMonthAbbr = monthNames[currentDate.getUTCMonth()];
                const nextMonthAbbr = monthNames[nextDate.getUTCMonth()];
                const currentYear = currentDate.getUTCFullYear();
                const nextYear = nextDate.getUTCFullYear();
                
                let dateRange;
                if (currentDate.getUTCMonth() === nextDate.getUTCMonth()) {
                    dateRange = `${day} ‚Üí ${nextDayOfMonth} ${currentMonthAbbr} ${currentYear}`;
                } else {
                    dateRange = `${day} ${currentMonthAbbr} ‚Üí ${nextDayOfMonth} ${nextMonthAbbr} ${nextYear}`;
                }
                
                schedule.push({
                    dateRange,
                    team: team
                });
                
                currentDate = nextDate;
            }
            
            return schedule;
        }

        // Render current team info
        function renderCurrentTeam() {
            const currentInfo = getCurrentTeamInfo();
            document.getElementById('currentTeamEmoji').textContent = currentInfo.team.emoji;
            document.getElementById('currentTeamName').textContent = currentInfo.team.name;
            document.getElementById('timeRemaining').textContent = 
                `Time remaining: ${currentInfo.hoursRemaining} hours ${currentInfo.minutesRemaining} minutes`;
            document.getElementById('currentTime').textContent = 
                `Current UTC: ${currentInfo.currentDateTime.toUTCString()}`;
        }

        // Render all months
        function renderMonths() {
            const container = document.getElementById('monthsContainer');
            container.innerHTML = '';
            
            // Months to display: December 2025 through June 2026
            const months = [
                { year: 2025, month: 11, name: 'December 2025' }, // December
                { year: 2026, month: 0, name: 'January 2026' },
                { year: 2026, month: 1, name: 'February 2026' },
                { year: 2026, month: 2, name: 'March 2026' },
                { year: 2026, month: 3, name: 'April 2026' },
                { year: 2026, month: 4, name: 'May 2026' },
                { year: 2026, month: 5, name: 'June 2026' }
            ];
            
            months.forEach(monthData => {
                const schedule = generateMonthSchedule(monthData.year, monthData.month);
                const monthCard = document.createElement('div');
                monthCard.className = 'month-card';
                
                let monthHTML = `<div class="month-header">${monthData.name}</div>`;
                
                schedule.forEach(item => {
                    monthHTML += `
                        <div class="schedule-item">
                            <div class="date-range">${item.dateRange}</div>
                            <div class="team-info ${item.team.colorClass}">
                                <span>${item.team.emoji}</span>
                                ${item.team.name}
                            </div>
                        </div>
                    `;
                });
                
                monthCard.innerHTML = monthHTML;
                container.appendChild(monthCard);
            });
        }

        // Initialize and update
        function init() {
            renderCurrentTeam();
            renderMonths();
            
            // Update every minute
            setInterval(() => {
                renderCurrentTeam();
            }, 60000);
        }

        // Start the application
        document.addEventListener('DOMContentLoaded', init);
    </script>
</body>
